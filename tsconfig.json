{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "esModuleInterop": true,
    "jsx": "react",
    "locale": "ru",
    "lib": [
      "dom",
      "dom.iterable",
      "scripthost",
      "esnext"
    ],
    "baseUrl": "./src",
    "paths":{
      "components":["/components"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}