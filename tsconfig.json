{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "jsx": "react",
    "locale": "ru",
    "strict": true,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "dom.iterable",
      "scripthost",
      "esnext"
    ],
    "baseUrl": "./src",
    "paths":{
      "components":["/components"],
      "themes":["/themes"],
      "styles":["/styles"]
    }
  },
  "plugins": [
    {
      "name": "typescript-styled-plugin",
      "tags": [
        "styled",
        "css",
        "injectGlobal",
        "createGlobalStyle",
        "keyframes" 
      ]
    }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}